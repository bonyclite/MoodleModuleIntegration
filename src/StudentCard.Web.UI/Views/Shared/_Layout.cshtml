<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Scripts.Render("~/Scripts/jqueryBundle")
    @Scripts.Render("~/Scripts/modernizr/bundle")    
    @Scripts.Render("~/Scripts/bootstrap/bundle")      
    
    @Styles.Render("~/Content/site/bundle")
    @Styles.Render("~/Content/fonts/bundle")
    @Styles.Render("~/Content/bootstrap/bundle")       
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>